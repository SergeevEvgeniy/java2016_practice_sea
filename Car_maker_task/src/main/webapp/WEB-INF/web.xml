<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>SSearch</servlet-name>
        <servlet-class>com.epam.cars.web.SSearch</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>SSearch</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SListCars</servlet-name>
        <servlet-class>com.epam.cars.web.SListCars</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>SListCars</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SAddCars</servlet-name>
        <servlet-class>com.epam.cars.web.SAddCars</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>SAddCars</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>
</web-app>
